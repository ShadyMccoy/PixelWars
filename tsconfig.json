{

    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "built/tsc.js",
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "old js",
        "**/*.spec.ts"
    ]
}